// clang-format off


// Possible OS:
// NONE	  No OS - always active
// MAC	  MacOS
// WIN	  Windows
// LIN	  Linux  

// Possible masks:
// NONE	    NO MASK
// CTRL_L	  CTRL(L)
// CTRL_R	  CTRL(R)
// CTRL	    CTRL(L/R)
// SHIFT_L	SHIFT(L)
// SHIFT_R	SHIFT(R)
// SHIFT	  SHIFT(L/R)
// ALT_L	  ALT(L)
// ALT_R	  ALT(R)
// ALT	    ALT(L/R)
// GUI_L	  GUI(L)
// GUI_R	  GUI(R)
// GUI	    GUI(L/R)
// CS	      CTRL(L/R), SHIFT(L/R)
// CA	      CTRL(L/R), ALT(L/R)
// CG	      CTRL(L/R), GUI(L/R)
// SA	      SHIFT(L/R), ALT(L/R)
// SG	      SHIFT(L/R), GUI(L/R)
// AG	      ALT(L/R), GUI(L/R)
// CSA	    CTRL(L/R), SHIFT(L/R), ALT(L/R)
// CSG	    CTRL(L/R), SHIFT(L/R), GUI(L/R)
// CAG	    CTRL(L/R), ALT(L/R), GUI(L/R)
// SAG	    SHIFT(L/R), ALT(L/R), GUI(L/R)
// CSAG	    CTRL(L/R), SHIFT(L/R), ALT(L/R), GUI(L/R)


//    OS,     Original,  ModMask,  Remap
REMAP(NONE,   KC_ENT,    SHIFT,    KC_BSPC)
REMAP(NONE,   KC_ESC,    SHIFT,    KC_GRV)
REMAP(NONE,   CK_SENT,   NONE,     S(KC_ENT))
REMAP(NONE,   KC_QUOT,   SHIFT,    KC_QUOT)
REMAP(NONE,   KC_QUOT,   NONE,     KC_DQUO)
REMAP(NONE,   KC_UNDS,   SHIFT,    KC_UNDS)
// REMAP(NONE,  KC_EQL, SHIFT, MA_COLCOL)
REMAP(NONE,   KC_LBRC,   SHIFT,    KC_LABK)
REMAP(NONE,   KC_RBRC,   SHIFT,    KC_RABK)
REMAP(NONE,   KC_LPRN,   SHIFT,    KC_LCBR)
REMAP(NONE,   KC_RPRN,   SHIFT,    KC_RCBR)
// REMAP(NONE,  KC_AMPR, SHIFT, MA_AND)
// REMAP(NONE,  KC_PIPE, SHIFT, MA_OR)
REMAP(NONE,   KC_COMM,   SHIFT,    KC_EXLM)
REMAP(NONE,   KC_DOT,    SHIFT,    KC_QUES)
REMAP(NONE,   KC_SLASH,  SHIFT,    KC_BACKSLASH)
REMAP(NONE,   KC_HOME,   CTRL,     KC_PGUP)
REMAP(NONE,   KC_END,    CTRL,     KC_PGDN)
REMAP(NONE,   KC_9,      SHIFT,    KC_TILDE)
REMAP(NONE,   KC_MINS,   SHIFT,    KC_PPLS)

